<h1>Listing bundles of '<%= @project.name%>'</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bundles.each do |bundle| %>
  <tr>
    <td><%= bundle.name %></td>
    <td><%= link_to 'Translate', edit_bundle_path(bundle) %></td>
    <td><%= link_to 'Destroy', bundle, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

